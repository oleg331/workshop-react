{
  "extends": [
    "standard"
  ],
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style": "off",
    "max-len": ["error", 120],
    "indent": "off",
    "comma-dangle": "off",
    "quote-props": "off",
    "no-class-assign": "off",
    "import/no-unresolved": "off",
    "import/first": "off",
    "object-curly-newline": "off",

    "semi": [2, "always"],
    "eqeqeq": [0, "always"],
    "space-before-function-paren": [1, "always"],
    "node/no-deprecated-api": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
